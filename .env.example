# WalletConnect Project ID (get from cloud.walletconnect.com)
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_project_id_here

# Alchemy API Key (optional, for better RPC)
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_key_here

# Arbitrum RPC URL (optional, custom RPC)
NEXT_PUBLIC_ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# ============================================
# Fee Collection
# ============================================
# Fee wallet for collecting platform fees (LiFi + GMX UI fees)
NEXT_PUBLIC_FEE_WALLET=0x9c7930cA28279C6A7a763DcA3573620903491806

# ============================================
# Coinbase Onramp Integration
# ============================================
# Get App ID from https://www.coinbase.com/cloud/products/onramp
NEXT_PUBLIC_COINBASE_ONRAMP_APP_ID=your_coinbase_onramp_app_id

# Coinbase CDP API Key (for advanced integrations)
# Get from https://www.coinbase.com/developer-platform/apps
CDP_API_KEY_ID=your_cdp_api_key_id
CDP_API_KEY_SECRET=your_cdp_api_key_secret

# ============================================
# LiFi Bridge Integration
# ============================================
# Already configured in .env.local via Vercel
NEXT_PUBLIC_LIFI_INTEGRATOR=NeverSell
NEXT_PUBLIC_LIFI_API_KEY=your_lifi_api_key
NEXT_PUBLIC_LIFI_FEE=0.001  # 0.1% platform fee
